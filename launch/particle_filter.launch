<launch>
  <!-- Publish a static transform from 'map' to 'base_link' -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher" args="0 0 0 0 0 0 map base_link" />

  <node pkg="pf_uwb_imu" type="path_tf_broadcaster" name="path_tf_broadcaster" output="screen"/>

  <node pkg="pf_uwb_imu" type="particle_filter" name="particle_filter" output="screen" />

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find pf_uwb_imu)/launch/particle_filter.rviz" />

</launch>